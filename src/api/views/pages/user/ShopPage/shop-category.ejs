<!-- Plugins JS -->
<script src="/public/javascripts/user/shop-page/shop-page.js"></script>
<script src="/public/javascripts/user/shop-page/pagination.js"></script>
<script src="/public/javascripts/user/shop-page/filt-result.js"></script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

