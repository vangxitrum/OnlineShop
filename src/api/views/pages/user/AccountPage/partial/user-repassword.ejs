    <form class="password-container"  method="POST" id="repassword-form" name="form-add">
      <h2 class="tag_title">Password</h2>
      <p class = "tag_explaint">For your account's safety, you should have a strong password!!!</p>
      <hr class="solid">
      <h3>Change your password</h3>
      <div class="form-container">
        <div class = "input-container">
          <input type="password" id="current-password" class = "form-input" placeholder=" ">
          <label for = "name" class = "form-label">Current Password</label>
          <span class="form-message" style="font-size:0px" id="password-temp"></span>
        </div>
        <span id="current-password-error" class="validator-message"></span>
        <div class = "input-container">
          <input type="password"  id="new-password" class = "form-input" placeholder=" ">
          <label for = "name" class = "form-label">Password</label>
          <span class="form-message" style="font-size:0px" id="new-password-temp"></span>
        </div>
        <span id="new-password-error" class="validator-message"></span>
        <div class = "input-container">
          <input type="password" id="re-password" class = "form-input" placeholder=" ">
          <label for = "name" class = "form-label">Re-password</label>
          <span class="form-message" style="font-size:0px " id="confirm-temp"></span>
        </div>
        <span id="confirm-password-error" class="validator-message"></span>
       <div class="input-containr">
       </div>
        <button type="submit"  id="confirm-repassword" class ="btn btn-primary">Save change</button>
      </div>
      <div class="separator"></div>
      <div class="note-container">
        <h4>Note</h4>
        <p>The password must have more than 8 characters</p>
        <p>It must contain 1 special character</p>
        <p>It should be different from your recent password</p>
      </div>
    </form>
