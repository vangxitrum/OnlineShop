<% let index=0 %> 
<% blogs.forEach(function(blog) { %>
    <% index++ %> 
    <% if(index>(currentPage-1)*perPage && index<=currentPage*perPage){ %> 
    <div class="blog_grid">
        <div class="blog_thumb">
            <a href="/blogdetail/<%= blog._id %>"><img src="<%= blog.image %> " alt=""></a>
        </div>
        <div class="blog_content">
            <h3 class="post_title"><a href="/blogdetail/<%= blog._id %>"><%= blog.title %> </a></h3>
            <p class="post_desc"><%= blog.descript %> </p>
            <div class="post_date">
                <span class="month"> <%= moment(blog.date).format('DD') %></span>
                <span class="month">/ <%= moment(blog.date).format('MMM') %> </span>
            </div>
            
            
            <a class="read_more" href="/blogdetail/<%= blog._id %>">read more</a>
            <div class="post_meta">
               <span>Posted by </span>
                <span><a ><%= blog.author.name %> </a></span>
               
            </div>
        </div>
    </div>
    <% } %> 
    <% }) %>  
    <script>BLOGPAGE="<%= pages%>"</script>
    
 
    